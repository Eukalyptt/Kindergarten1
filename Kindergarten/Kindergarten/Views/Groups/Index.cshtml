@model List<Group>
@{
}

<h2 class="text-center mb-5">List of Groups</h2>

<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller="Groups" asp-action="Create">New Group</a>
	</div>
	<div class="col">

	</div>
</div>


<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Children Count</th>
			<th>Kindergarten Name</th>
			<th>Teacher</th>
			<th>Image</th>
			<th>Created At</th>
			<th>Updated At</th>
			<th>Action</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var group in Model)
		{
			<tr>
				<td>@group.Id</td>
				<td>@group.Name</td>
				<td>@group.ChildrenCount</td>
				<td>@group.KindergartenName</td>
				<td>@group.Teacher</td>
				<td><img src="/pictures/@group.ImageFileName" width="100" /></td>
				<td>@group.CreatedAt.ToString("MM/dd/yyyy")</td>
				<td>@group.UpdatedAt.ToString("MM/dd/yyyy")</td>
				<td style="white-space:nowrap">
					<a class="btn btn-primary btn-sm" asp-controller="Groups" asp-action="Edit" asp-route-id="@group.Id">Edit</a>
					<a class="btn btn-primary btn-sm" asp-controller="Groups" asp-action="Delete" asp-route-id="@group.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>