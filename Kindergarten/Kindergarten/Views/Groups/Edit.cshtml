@model GroupDto
@{
}
<div style="background-color: slategray;">
	<section class="page-section">
		<div class="row">
			<div class="col-md-8 mx-auto rounded border p-3" style="background-color: white; box-shadow: inset 0px 0px 10px rgba(0,0,0,0.7);">
				<h2 class="text-center mb-5">Edit Group</h2>

				<form method="post" enctype="multipart/form-data">
					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">Id</label>
						<div class="col-sm-8">
							<input class="form-control-plaintext" readonly value="@ViewData["GroupId"]">
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">Name</label>
						<div class="col-sm-8">
							<input class="form-control" asp-for="Name" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">Children count</label>
						<div class="col-sm-8">
							<input class="form-control" asp-for="ChildrenCount" />
							<span asp-validation-for="ChildrenCount" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">Kindergarten Name</label>
						<div class="col-sm-8">
							<input class="form-control" asp-for="KindergartenName" />
							<span asp-validation-for="KindergartenName" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">Teacher</label>
						<div class="col-sm-8">
							<input class="form-control" asp-for="Teacher" />
							<span asp-validation-for="Teacher" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<div class="offset-sm-4 col-sm-8">
							<img src="/pictures/@ViewData["ImageFileName"]" width="150" />
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">Image</label>
						<div class="col-sm-8">
							<input class="form-control" asp-for="ImageFile" />
							<span asp-validation-for="ImageFile" class="text-danger"></span>
						</div>
					</div>

					<div class="row mb-3">
						<label class="col-sm-4 col-form-label">Created At</label>
						<div class="col-sm-8">
							<input class="form-control-plaintext" readonly value="@ViewData["CreatedAt"]">
						</div>
					</div>

					<div class="row">
						<div class="offset-sm-4 col-sm-4 d-grid">
							<button type="submit" class="btn btn-primary">Submit</button>
						</div>
						<div class="col-sm-4 d-grid">
							<a class="btn btn-outline-primary" asp-controller="Groups" asp-action="Index" role="button">
								Cancel
							</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</section>
</div>
